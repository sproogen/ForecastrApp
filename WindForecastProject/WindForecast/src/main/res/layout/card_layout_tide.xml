<?xml version="1.0" encoding="utf-8"?>
<!--suppress AndroidLintUselessParent -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/card_outer">

    <RelativeLayout android:id="@+id/inner_frame" style="@style/card_inner">


        <RelativeLayout android:id="@+id/titleFrame" style="@style/card_title_frame">

            <TextView android:id="@android:id/title" style="@style/card_title_large"/>

            <!--suppress AndroidLintContentDescription -->
            <ImageButton android:id="@android:id/button1" style="@style/card_popup_anchor" android:visibility="gone"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/contentFrame"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/titleFrame"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/row1"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/row1_image"
                    android:src="@drawable/tide_high" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/row1_time"
                    android:visibility="visible"
                    android:paddingLeft="20dp" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/row1_height"
                    android:visibility="visible"
                    android:paddingLeft="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/row2"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/row2_image"
                    android:src="@drawable/tide_high" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/row2_time"
                    android:visibility="visible"
                    android:paddingLeft="20dp" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/row2_height"
                    android:visibility="visible"
                    android:paddingLeft="20dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row3"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/row3_image"
                    android:src="@drawable/tide_high" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/row3_time"
                    android:visibility="visible"
                    android:paddingLeft="20dp" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/row3_height"
                    android:visibility="visible"
                    android:paddingLeft="20dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/row4"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/row4_image"
                    android:src="@drawable/tide_high" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/row4_time"
                    android:visibility="visible"
                    android:paddingLeft="20dp" />

                <TextSwitcher
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="?android:textColorPrimary"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/row4_height"
                    android:visibility="visible"
                    android:paddingLeft="20dp" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <!--suppress AndroidLintContentDescription -->

    <ImageView style="@style/card_shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>