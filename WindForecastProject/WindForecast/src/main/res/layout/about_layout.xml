<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="FORECASTR APP"
            android:id="@+id/textView"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Version : "
            android:id="@+id/versionLabel"
            android:textSize="16sp"
            android:layout_alignBaseline="@+id/versionName"
            android:layout_alignBottom="@+id/versionName"
            android:layout_toLeftOf="@+id/frameLayout"
            android:layout_toStartOf="@+id/frameLayout" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/versionName"
            android:layout_below="@+id/textView"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/versionLabel"
            android:layout_toEndOf="@+id/versionLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Last Updated : "
            android:id="@+id/updatedLabel"
            android:layout_below="@+id/versionLabel"
            android:layout_toLeftOf="@+id/frameLayout"
            android:layout_toStartOf="@+id/frameLayout"
            android:layout_marginTop="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text=""
            android:id="@+id/updatedText"
            android:layout_below="@+id/versionLabel"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/updatedLabel"
            android:layout_toEndOf="@+id/updatedLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Created By : "
            android:id="@+id/createdLabel"
            android:layout_below="@+id/updatedLabel"
            android:layout_toLeftOf="@+id/frameLayout"
            android:layout_toStartOf="@+id/frameLayout"
            android:layout_marginTop="12dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="James Grant"
            android:id="@+id/createdText"
            android:layout_below="@+id/updatedLabel"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:layout_toRightOf="@+id/createdLabel"
            android:layout_toEndOf="@+id/createdLabel" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/websiteLink"
            android:id="@+id/website"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/createdLabel"
            android:layout_toRightOf="@+id/createdLabel"
            android:layout_toEndOf="@+id/createdLabel"
            android:textColorLink="#4ca435"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/twitterLink"
            android:id="@+id/twitter"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:layout_below="@+id/website"
            android:layout_toRightOf="@+id/createdLabel"
            android:layout_toEndOf="@+id/createdLabel"
            android:textColorLink="#4ca435"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/frameLayout"></FrameLayout>

    </RelativeLayout>
</RelativeLayout>

