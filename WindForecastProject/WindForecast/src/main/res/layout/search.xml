<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/searchBox"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:singleLine="true"
        android:padding="8dp"
        android:textColor="?android:textColorPrimaryInverse"
        android:textCursorDrawable="@null"
        android:background="@color/drawer_search"
        android:hint="Search" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearButton"
        android:src="@drawable/abs__ic_clear_normal"
        android:layout_alignBottom="@+id/searchBox"
        android:layout_alignRight="@+id/searchBox"
        android:layout_alignEnd="@+id/searchBox"
        android:layout_alignTop="@+id/searchBox"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:visibility="gone" />

</RelativeLayout>